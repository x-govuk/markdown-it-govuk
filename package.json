{
  "name": "markdown-it-govuk",
  "version": "0.1.3",
  "description": "Plugin for markdown-it to convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown-it-plugin",
    "markdown-it",
    "markdown"
  ],
  "homepage": "https://github.com/x-govuk/markdown-it-govuk#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/markdown-it-govuk/issues"
  },
  "license": "MIT",
  "files": [
    "lib",
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/markdown-it-govuk.git"
  },
  "scripts": {
    "prelint": "prettier . --check",
    "lint": " eslint '**/*.js' && stylelint 'x-govuk/**/*.scss'",
    "test": "node --test",
    "coverage": "node --test --experimental-test-coverage",
    "release": "np"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jsdoc": "^46.9.0",
    "markdown-it": "^14.0.0",
    "markdown-it-testgen": "^0.1.6",
    "np": "^9.2.0",
    "prettier": "^3.1.0",
    "stylelint": "^15.0.0",
    "stylelint-config-gds": "^1.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./highlight": {
      "import": "./lib/highlight.js",
      "require": "./lib/highlight.js"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.md",
        "options": {
          "embeddedLanguageFormatting": "off",
          "singleQuote": false
        }
      },
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "plugin:jsdoc/recommended-typescript-flavor",
      "standard",
      "prettier"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
